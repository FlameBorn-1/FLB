{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./typechain-types"
    ],
    "types": ["hardhat", "mocha", "chai"],
    "baseUrl": ".",
    "paths": {
      "@scripts/*": ["scripts/*"],
      "@test/*": ["test/*"],
      "@contracts/*": ["contracts/*"],
      "@types/*": ["typechain-types/*"],
      "@config/*": ["config/*"],
      "@artifacts/*": ["artifacts/*"]
    }
  },
  "include": [
    "scripts",
    "test",
    "typechain-types",
    "hardhat.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
